@using ONLİNETİCARİOTOMASYON.Models.Sınıflar
@model List<Satışhareketi>
    @{
        ViewBag.Title = "SatısDetay";
        Layout = "~/Views/Shared/_Adminsayfası.cshtml";
    }

    <h2>Satış Detay</h2>
    <br />

   <table class="table table-condensed">
       <tr>
           <th>Satış ID</th>
           <th>Ürün</th>
           <th>Cari</th>
           <th>Personel</th>
           <th>Adet</th>
           <th>Fiyat</th>
           <th>Toplam</th>
           <th>Tarih</th>
       </tr>
       @foreach (var k in Model)
        {
   <tr>
       <td> @k.satısid</td>
       <td>@k.ürünler.ürünad </td>
       <td>@k.cari.cariad @k.cari.carisoyad </td>
       <td>@k.personel.personelad @k.personel.personelsoyad </td>
       <td>@k.adet</td>
       <td>@k.fiyat</td>
       <td>@k.toplamtutar</td>
       <td>@k.tarih</td>
       
   </tr>
        }
    </table>
<a href="/Satıs/Ürünlistesi/" class="btn btn-success">Yazdır</a>