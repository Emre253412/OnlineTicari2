@model ONLİNETİCARİOTOMASYON.Models.Sınıflar.Satışhareketi
@{
    ViewBag.Title = "SatısGetir";
    Layout = "~/Views/Shared/_Adminsayfası.cshtml";
}

<h2>SatısGetir</h2>
<br />
@using (Html.BeginForm("SatısGuncelle", "Satıs", FormMethod.Post))
{

    @Html.LabelFor(x => x.satısid)
    @Html.LabelFor(x => x.ürünler)
    @Html.DropDownListFor(x => x.ürünid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.Label("Cari")
    @Html.DropDownListFor(x => x.cariid, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.personel)
    @Html.DropDownListFor(x => x.personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.adet)
    @Html.TextBoxFor(x => x.adet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.fiyat)
    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.toplamtutar)
    @Html.TextBoxFor(x => x.toplamtutar, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.tarih)
    @Html.TextBoxFor(x => x.tarih, new { @class = "form-control" })
    <br />

    <button class="btn btn-warning">Güncelle</button>

}