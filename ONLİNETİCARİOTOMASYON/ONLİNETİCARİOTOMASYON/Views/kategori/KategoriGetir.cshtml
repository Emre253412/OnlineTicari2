@model ONLİNETİCARİOTOMASYON.Models.Sınıflar.Kategori
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_Adminsayfası.cshtml";
}
<br />
<h2>Kategori Güncelle</h2>
<br />
@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post)) { 


<div class="form-group">
    @Html.LabelFor(x => x.kategorıad)
    @Html.TextBoxFor(x => x.kategorıad, new { @class = "form-control" })
    @Html.HiddenFor(x => x.kategoriid)
</div>
<button class="btn btn-warning">Güncelle</button>


}