@using ONLİNETİCARİOTOMASYON.Models.Sınıflar
@model List<Satışhareketi>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/_Adminsayfası.cshtml";
}

<h2>MusteriSatis</h2>
<br />
<ol class="breadcrumb mb-4>
    <li class="breadcrumb-item active">Cari Adı :@ViewBag.cari</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Satış ID</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam</th>
        <th>Tarih</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td> @k.satısid</td>
            <td>@k.ürünler.ürünad </td>
            <td>@k.personel.personelad @k.personel.personelsoyad</td>
            <td>@k.adet</td>
            <td>@k.fiyat</td>
            <td>@k.toplamtutar</td>
            <td>@k.tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color:aqua">Yazdır</a></td>
        </tr>
    }
</table>
